# Variáveis de ambiente - Copie para .env.local

# Banco de dados Neon (PostgreSQL) - DEPRECATED: Usando Firebase
# DATABASE_URL="postgresql://..."

# Firebase Admin SDK (credenciais JSON em uma linha)
FIREBASE_CREDENTIALS='{"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"firebase-adminsdk@your-project-id.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token"}'

# Firebase Realtime Database URL (OBRIGATÓRIO para real-time)
FIREBASE_DATABASE_URL="https://your-project-id-default-rtdb.firebaseio.com"

# Firebase Client SDK (variáveis públicas para o browser)
NEXT_PUBLIC_FIREBASE_API_KEY="your_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project-id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_DATABASE_URL="https://your-project-id-default-rtdb.firebaseio.com"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project-id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"

# Giphy API Key (obtenha em https://developers.giphy.com/)
GIPHY_API_KEY="your_giphy_api_key"

# Secret para geração de tokens
JWT_SECRET="your_super_secret_key_here"

# URL base da aplicação
NEXT_PUBLIC_APP_URL="http://localhost:3000"
